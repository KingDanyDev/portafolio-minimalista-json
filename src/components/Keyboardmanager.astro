---

<footer class="no-print">
Pulsa <kbd>Ctrl</kbd> + <kbd>K</kbd> para abrir la paleta de comandos
</footer>

<ninja-keys data-info={JSON.stringify(profilesInfo)}
 placeholder="Buscar Comando"> </ninja-keys>

<script>
import "ninja-keys"

const ninja = document.querySelector("ninja-keys")

if (ninja != null) {
    const info = ninja.getAttribute('data-info') ?? "[]"
    const parsedInfo = JSON.parse(info)

    const data = parsedInfo.map((item: any) => {

        return{
            ...item,
            handler: () => {
                window.open(item.url, "_blank")
            },
        }
})

    ninja.data = [
    {
            id: 'Print',
            title: 'Imprimir',
            icon: `<svg style="margin-right: 4px" width="16" height="16" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
