---
import Section from "../Section.astro";

import {certificates} from "@/cv.json"

---

<Section title="Certificaciones">
    <ul>
       {
           certificates.map(
               ({name, date, issuer}) =>
           {
                return(
                <li>
                   <article>
                       <header>
                           <div> 
                               <h3>{name}</h3>
                               <h4>{issuer}</h4>
                           </div>
                          <time> 
                           {date}
                          </time>
                       </header>
                       <footer>
                           <p>{}</p>
                       </footer>
                          
                           
                   </article>
               </li>
               )
           }
       )   
   }
    </ul>
   
   </Section>

   <style>

    article {

        border-radius: 8px;
        border: 1px solid #f2f2f2;
        padding: 8px;
        margin-bottom: 20px;    

    }
    ul {
        display:flex;
        flex-direction: column;
    }

    article h3 {
        font-weight: 500;
        font-style: bold;
        color:#333;
        
        
    }

    article h4 {
        font: bold;
        color: #555;
        font-weight: 400;
        
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items:flex-start;
        margin-bottom: 4px;
    }

    time{
        color: #555;
        font-size: 0.85rem;
    }


</style>