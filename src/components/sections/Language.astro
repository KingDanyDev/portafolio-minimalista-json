---
import Section from "../Section.astro";

import { languages } from "@/cv.json"
---

<Section title="Idiomas">
    
<ul>
    {
    languages.map(({language, fluency})=>(
    <li>
        <span>{language} - {fluency}</span>
    </li>
    ))
}
</ul>



</Section>

 <style>
 ul {
    display: inline-flex;
    gap: 8px;
    flex-wrap: wrap;
    

 }
 li{
    border-radius: 6px;
    border: solid 1px #f2f2f2;
    background: #eee;
    color: black;
    font-size: 1.05rem;
    font-weight: 500;
    padding: 0.2rem 0.6rem;
    margin-top: 8px;
   
 }



 </style>