---
import Section from "../Section.astro";

import {education} from "@/cv.json"

---

<Section title="Formación Académica">
    <ul>
       {
           education.map(
               ({institution, url, area, startDate, endDate}) =>
           {
               const starYear = new Date(startDate).getFullYear()
               const endYear = endDate != null ? new Date(endDate).getFullYear() : "Actual"
               const years = `${starYear} - ${endYear}`
                return(
                <li>
                   <article>
                       <header>
                           <div> 
                               <h3>{area}</h3>
                               <h4>{institution}</h4>
                           </div>
                          <time> 
                           {years}
                          </time>
                       </header>
                       <footer>
                           <p>{}</p>
                       </footer>
                          
                           
                   </article>
               </li>
               )
           }
       )   
   }
    </ul>
   
   </Section>

   <style>
    ul {
        display:flex;
        flex-direction: column;
        gap: 30px;
    }

    article h3 {
        font-weight: 500;
        color:#111;
    }

    article h4 {
        font: bold;
        color: #131313;
        font-weight: 400;
    }

    header {
        display: flex;
        justify-content: space-between;
        align-items:flex-start;
        margin-bottom: 4px;
    }

    time{
        color: #555;
        font-size: 0.85rem;
    }


</style>
